<%- include('../layouts/header'); %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Video Detail's View</h1>
          </div>

        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <!-- <% if (flashMessage) { %>
            <div class="alert alert-danger"><%= flashMessage %></div>
        <% } %> -->
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- jquery validation -->
            <div class="card card-primary">
              <!-- <div class="card-header">
                <h3 class="card-title">Quick Example <small>jQuery Validation</small></h3>
              </div> -->
              <div class="col-md-1 float-right">
                <a href="/admin/video/list"><button type="button" class="btn btn-block btn-primary">Back</button></a>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form id="quickForm" method="post" action="/admin/video/update/<%= data.id %>"
                enctype="multipart/form-data">
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Singer</label>
                    <select disabled class="form-control" name="user_id" id="">
                      <option selected disabled>Select Singer</option>
                      <% for(let i in singers){ %>
                        <option value="<%= singers[i].id %>" <%=(singers[i].id==data.user_id) ? 'selected' : '' %> ><%=
                            singers[i].name %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Language</label>
                    <select disabled class="form-control" name="category_id" id="">
                      <!-- <option selected disabled>Select Category</option> -->
                      <% for(let i in category){ %>
                        <option value="<%= category[i].id %>" <%=(category[i].id==data.category_id) ? 'selected' : '' %>
                          ><%= category[i].name %>
                        </option>
                        <% } %>
                    </select>
                    <!-- <input type="text" name="name" class="form-control" id="exampleInputEmail1" placeholder="Enter Name"> -->
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Genres</label>
                    <select disabled class="form-control" name="genres_id" id="genres">
                      <!-- <option selected disabled>Select Genres</option> -->
                      <% for(let i in genresData){ %>
                        <option value="<%= genresData[i].id %>" cat_id="<%= genresData[i].category_id %>"
                          <%=(genresData[i].id==data.genres_id) ? 'selected' : '' %> ><%= genresData[i].name %>
                        </option>
                        <% } %>
                    </select>
                    <!-- <input type="text" name="name" class="form-control" id="exampleInputEmail1" placeholder="Enter Name"> -->
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    <input readonly type="text" name="name" class="form-control" id="exampleInputEmail1"
                      placeholder="Enter Name" value="<%= data.name %>">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputEmail4">Artist Name</label>
                    <input readonly type="text" name="artist" class="form-control" id="exampleInputEmail4"
                      placeholder="Enter Artist name" value="<%= data.artist %>">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputEmail5">Director Name</label>
                    <input type="text" name="director" class="form-control" id="exampleInputEmail5"
                      placeholder="Enter Director name" value="<%= data.director %>">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputEmail6">Producer Name</label>
                    <input type="text" name="producer" class="form-control" id="exampleInputEmail6"
                      placeholder="Enter Producer name" value="<%= data.producer %>">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputEmail7">Price</label>
                    <input type="text" name="price" class="form-control" id="exampleInputEmail7"
                      placeholder="Enter Price value" value="<%= data.price %>">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputEmail8">Description</label>
                    <input type="text" name="description" class="form-control" id="exampleInputEmail8"
                      placeholder="Enter description" value="<%= data.description %>">
                  </div>

                  <div class="form-group">
                    <label for="exampleInputEmail9">Duration</label>
                    <input type="text" name="duration" class="form-control" id="exampleInputEmail9"
                      placeholder="Enter duration" value="<%= data.duration %>">
                  </div>

                  <div class="form-group">
                    <label for="inputExperience" class="col-sm-2 col-form-label">Image</label>
                    <img src="<%= data.image %>" class="profile-user-img img-fluid">
                  </div>
                  <div style="position: relative; padding-top: 56.25%;">
                    <video id="my-video" controls style="position: absolute; top: 0; left: 0; width: 50%; height: 50%;"></video>
                  </div>

                </div>
              </form>
            </div>
            <!-- /.card -->
          </div>
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%- include('../layouts/footer'); %>

  <script>
    const video = document.getElementById('my-video');
    const hls = new Hls();
    const videoUrl = '<%= data.videoURL %>';
  
    if (Hls.isSupported()) {
      hls.loadSource(videoUrl);
      hls.attachMedia(video);
    } else if (video.canPlayType('application/vnd.apple.mpegurl')) {
      video.src = videoUrl;
    }
  </script>
  
    <script>
      $(document).ready(function () {

        $('#quickForm').validate({
          rules: {
            name: {
              required: true,
            },
            category_id: {
              required: true,
            },
            artist: {
              required: true,
            },
            price: {
              required: true,
            },
            description: {
              required: true,
            },
            // music: {
            //     required: true
            // },
            // image: {
            //     required: true
            // },
          },
          messages: {
            name: "Please enter name",
            category_id: "Please select category",
            artist: "Please enter artist",
            price: "Please enter price",
            description: "Please enter description",
            // music: "Please enter music",
            // image: "Please select image"
          },
          errorElement: 'span',
          errorPlacement: function (error, element) {
            error.addClass('invalid-feedback');
            element.closest('.form-group').append(error);
          },
          highlight: function (element, errorClass, validClass) {
            $(element).addClass('is-invalid');
          },
          unhighlight: function (element, errorClass, validClass) {
            $(element).removeClass('is-invalid');
          }
        });
      });
    </script>