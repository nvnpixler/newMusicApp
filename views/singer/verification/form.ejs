        //   var selectedVal = this.value;
        //   console.log(selectedVal,'--selectedVal---');
        //   console.log($optgroups,'--selectedVal---');
          
        //   $('#genres').html($optgroups.filter('[cat_id="'+selectedVal+'"]'));
        // });  
      
    });
    </script>