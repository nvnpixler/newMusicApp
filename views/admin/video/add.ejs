    $(document).ready(function () {
      
        $('#quickForm').validate({
            rules: {
                user_id: {
                    required: true,
                },
                name: {
                    required: true,
                },
                category_id: {
                    required: true,
                },
                genres_id: {
                    required: true,
                },
                artist: {
