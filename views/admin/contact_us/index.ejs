              <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <!-- <th>#</th> -->
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Contact Date</th>
                  </tr>
                  </thead>
                  <tbody>
                    <% let count = 1;
                     for(let i in data){ %>
                        <tr>
                            <td><%= count++ %></td>
                            <td><%= data[i].name %></td>
                            <td><%= data[i].email %></td>
                            <td><%= data[i].message %></td>
                            <td><%= moment(data[i].created_at).format('llll'); %></td>
                        </tr>
                    <% } %>
                  </tbody>
